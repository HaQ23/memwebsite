<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profil Użytkownika</title>
    <!-- @include 'googleFonts.kit' -->
    <link rel="stylesheet" href="../dist/css/account.min.css">
</head>
<body>
    <!-- @include navbar.kit -->
    <main class="main wrapper">
        <div class="user">
            <img src="../dist/assets/icons/user.svg" alt="" class="user-img">
            <p class="user-name">Kacper Bałuszyński</p>
            <p class="user-nickname">@kac1er</p>
            <div class="user-fame">
                <p class="user-fame-text user-likes"><img src="../dist/assets/icons/thumbs-up.svg" alt=""> 589</p>
                <p class="user-fame-text user-dislikes"><img src="../dist/assets/icons/thumbs-down.svg" alt=""> 332</p>
            </div>
        </div>
        <div class="score">
            <p class="section-heading score-heading">Statystyki użytkownika</p>
            <div class="score-items">
                <div class="score-item">
                    <p class="score-text">Dodane memy: <span class="score-amount">127</span></p>
                </div>
                <div class="score-item">
                    <p class="score-text">Dodane komentarze: <span class="score-amount">32</span></p>
                </div>
                <div class="score-item">
                    <p class="score-text">Dodane zgłoszenia: <span class="score-amount">7</span></p>
                </div>
                <div class="score-item">
                    <p class="score-text">Otrzymane zgłoszenia: <span class="score-amount">74</span></p>
                </div>
            </div>
        </div>
        <div class="memes">
            <p class="memes-heading section-heading">Memy użytkownika</p>
            <div class="memes-items">
                <img class="memes-image" src="../dist/assets/images/meme-demo-template-2.webp" alt="">
                <img class="memes-image" src="../dist/assets/images/meme-demo-template-2.webp" alt="">
                <img class="memes-image" src="../dist/assets/images/meme-demo-template-2.webp" alt="">
                <img class="memes-image" src="../dist/assets/images/meme-demo-template-2.webp" alt="">
                <img class="memes-image" src="../dist/assets/images/meme-demo-template-2.webp" alt="">
                <img class="memes-image" src="../dist/assets/images/meme-demo-template-2.webp" alt="">
                <img class="memes-image" src="../dist/assets/images/meme-demo-template-2.webp" alt="">
            </div>
        </div>
    </main>
    <!-- @include footer.kit -->
    <script src="../dist/js/main.min.js"></script>
</body>
</html>